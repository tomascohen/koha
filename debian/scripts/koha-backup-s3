set -e


# Make sure the files we create are not accessible by anyone else.
umask 0077


die() {
    echo "$@" 1>&2
    exit 1
}


[ "$#" = 1 ] || die "No instance specified"
name="$1"
kohaconfig="/etc/koha/sites/$name/koha-conf.xml"
date="$(date +%Y-%m-%d)"

koha-dump --quiet "$name" > /dev/null

s3cmd --config=/etc/koha/s3cfg --acl-private put "/var/spool/koha/$name/$name-$date.tar.gz" "/var/spool/koha/$name/$name-$date.sql.gz" "s3://$name.theke/daily/"
